generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

enum Locale {
  en
}

// ! AFTER ADDING MORE SETTING MAKE SURE TO EDIT src/typings/index.ts
model Guild {
  id      String @id @default(auto()) @map("_id") @db.ObjectId
  guildId String @unique

  stayInChannel    Boolean @default(false)
  DJMode           Boolean @default(false)
  announceWhenPlay Boolean @default(true)

  volume   Int    @default(75)
  language Locale @default(en)

  premium Boolean @default(false)
}

model User {
  id        String     @id @default(auto()) @map("_id") @db.ObjectId
  userId    String     @unique
  playlists Playlist[]
}

model Playlist {
  id String @id @default(auto()) @map("_id") @db.ObjectId

  user   User   @relation(fields: [userId], references: [id])
  userId String @unique @db.ObjectId

  name  String
  songs Song[]
}

model Song {
  id String @id @default(auto()) @map("_id") @db.ObjectId

  playlist   Playlist @relation(fields: [playlistId], references: [id])
  playlistId String   @unique @db.ObjectId

  track String?
  info  SongInfo
}

type SongInfo {
  isSeekable Boolean
  isStream   Boolean
  title      String
  uri        String
  identifier String
  sourceName String
  author     String?
  length     Int
}
